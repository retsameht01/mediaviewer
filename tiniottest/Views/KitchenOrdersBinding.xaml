<Page
    x:Class="tiniottest.Views.KitchenOrdersBinding"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tiniottest.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local11="using:tiniottest.core.Model"
    xmlns:viewModel="using:tiniottest.Views.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <RelativePanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100" Background="#01579b">
            <TextBlock x:Name="shopTitle" RelativePanel.AlignHorizontalCenterWithPanel="True"  Margin="50,5,0,0" Text="Kitchen Orders" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" />
            <TextBlock x:Name="timeLbl"  RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="0,0,50,0" Text="TextBlock" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" FocusVisualPrimaryBrush="White" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="ordersCount" Text="Orders: 0" Width="Auto" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Margin="0,0,0,10" FontSize="22" FontWeight="Bold" Foreground="White"/>
            <Button x:Name="settingsBtn" Height="50" Width="98" Content="Settings" Foreground="White" Background="#0288d1" Margin="50,0,0,0" RelativePanel.AlignVerticalCenterWithPanel="True" HorizontalAlignment="Left" VerticalAlignment="Center" Click="settingsBtn_Click"/>
        </RelativePanel>
        
        <GridView x:Name="foodOrderGrid" HorizontalAlignment="Stretch" Margin="0,100,0,0"
                   ItemsSource="{x:Bind ViewModel.Orders}"
                  IsItemClickEnabled="true"
                  ItemClick="onOrderItemClick"
                  SelectionChanged="onOrderSelectionChanged"
                  VerticalAlignment="Stretch" Background="#283593" Padding="0,10,0,0">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local11:RestaurantOrder">
                    <StackPanel Orientation="Vertical" Width="400" Margin="10,0,10,10" Background="White" Height="500" Padding="10,0,10,0">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock  Text="{x:Bind TicketInfo}" FontWeight="Black" Style="{ThemeResource BaseTextBlockStyle}" Foreground="Black" FontSize="20" Margin="0,0,10,0"  VerticalAlignment="Center"/>
                            <TextBlock  Text="{x:Bind OrderDate}"  Style="{ThemeResource BaseTextBlockStyle}" Foreground="Black" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock  Text="{x:Bind OrderCount}"  Style="{ThemeResource BaseTextBlockStyle}" Foreground="Black" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock  Text="Details:"  Style="{ThemeResource BaseTextBlockStyle}" Foreground="Black" FontSize="20" Margin="0,0,10,5"/>


                        <ListView HorizontalAlignment="Stretch" Name="{x:Bind IdString}"  ItemsSource="{x:Bind SaleOrderItems}" Background="AliceBlue" SelectionChanged="onOrderItemSelectionChanged" IsItemClickEnabled="True">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local11:SaleOrderItem">
                                    <RelativePanel  Height="Auto" HorizontalAlignment="Stretch" Margin="5,0,0,0">
                                        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" >
                                                <Image Name="checkImg" Visibility="{x:Bind Vis}"
             Source="/Assets/checkmark.png" VerticalAlignment="Bottom" Margin="0,0,5,0" Width="30" Height="30"/>
                                                <TextBlock Text="{x:Bind ItemQuantity}" FontSize="17" FontWeight="Bold" VerticalAlignment="Bottom" Foreground="Black" />
                                                <TextBlock Text="{x:Bind ItemDetails}" FontSize="15" VerticalAlignment="Bottom" Margin="10,0,0,0" 
                                                           Foreground="Black"/>
                                            </StackPanel>
                                            <TextBlock  Text="{x:Bind ModifiersList}"  Style="{ThemeResource BaseTextBlockStyle}" Foreground="Black" FontSize="15" />
                                        </StackPanel>
                                       
                                    </RelativePanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- 
                        <Button  Content="Finish Order" Click="CompleteOrderClick" Margin="0,20,0,0" Foreground="White" Background="RosyBrown"
                                Width="120" Height="40" HorizontalAlignment="Center" FontWeight="Bold" /> -->

                    </StackPanel>
                    
                </DataTemplate>
            </GridView.ItemTemplate>
            
        </GridView>
        
